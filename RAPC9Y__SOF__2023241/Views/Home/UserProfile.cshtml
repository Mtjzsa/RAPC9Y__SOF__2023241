@using Microsoft.AspNetCore.Identity
@using RAPC9Y_SOF_2023241.MVC.Models
@model SiteUser

@inject SignInManager<SiteUser> SignInManager
@inject UserManager<SiteUser> UserManager

<div class="userCard">
    <h1>This is ur profile page</h1>
    <div class="userGrid">
        <div class="userImg">
            <img src="@Url.Action("GetUserImage", "Home", new {id = @Model.Id})" />
        </div>
        <div class="userData">
            <h1>Firstname</h1>
            <h4>@Model.FirstName</h4>
            <h1>Lastname</h1>
            <h4>@Model.LastName</h4>
            <h1>Username</h1>
            <h4>@Model.UserName</h4>
            <h1>Email</h1>
            <h4>@Model.Email</h4>
        </div>
    </div>
</div>


