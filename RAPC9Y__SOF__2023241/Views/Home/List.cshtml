@using RAPC9Y_SOF_2023241.MVC.Models
@model IEnumerable<Champion>



<div class="championGrid">
    @foreach(var item in Model.OrderBy(t => t.Name))
    {
        <div class="championCard">
            <img height="100" src="@Url.Action("GetImage", "Champion", new {Id = item.Id})"/>
            <p class="heroname">@item.Name</p>
            <a href="/champion/delete?id=@item.Id">Delete</a>
            <a href="/champion/update?id=@item.Id">Update</a>
        </div>


    }
</div>

