@using RAPC9Y_SOF_2023241.MVC.Models
@model IEnumerable<Champion>

<h2 class="adminTitle">Admin Menu</h2>

<div class="adminDiv">
    <table>
        <tr class="adminHead">
            <td>Name</td>
            <td>Gender</td>
            <td>Resources</td>
            <td>Region</td>
            <td>Release</td>
            <td colspan="2">Actions</td>
        </tr>
        
        @foreach (var item in Model.OrderBy(t => t.Name))
        {
            
            <tr class="adminChamp">
                <td class="verticalSplit">@item.Name</td>
                <td>@item.Gender</td>
                <td>@item.Resources</td>
                <td>@item.Region.RegionName</td>
                <td>@item.Release</td>
                <td><a href="/champion/update?id=@item.Id" class=""><span>Update</span></a></td>
                <td class="verticalSplit"><a href="/champion/delete?id=@item.Id" class=""><span>Delete</span></a></td>
            </tr>

        }

    </table>
</div>
