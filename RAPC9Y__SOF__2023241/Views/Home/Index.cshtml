@using RAPC9Y_SOF_2023241.MVC.Models
@model IEnumerable<Champion>

@{
    ViewData["Title"] = "Home Page";
}

<div class="homepage">
    <div class="text-center">
        <h1 class="display-4">Welcome To League Wiki</h1>
        <p>A custom made webpage based on Riot Games's League of Legends Videogame</p>
    </div>

    <div class="buttonDiv">
        <h1>Newest champions</h1>
        <section class="myContainer">
            @foreach (var item in Model.OrderByDescending(t => t.Release).Take(6))
            {
                <div class="img" style="background-image: url('@Url.Action("GetImage", "Champion", new {Id = item.Id})')">
                    <a href="/champion/championprofile?id=@item.Id"><span>@item.Name</span></a>
                </div>
            }
        </section>
        <a href="/home/list" class="btn fourth">View All</a>
    </div>
</div>


