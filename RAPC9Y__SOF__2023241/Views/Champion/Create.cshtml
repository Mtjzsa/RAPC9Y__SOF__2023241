@using RAPC9Y_SOF_2023241.MVC.Models
@model Champion
<h2>Add newest champion</h2>

<div>
    <div>
        <form asp-action="create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-floating">
                    <input asp-for="Name" class="form-control"/>
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Gender" class="form-control" />
                    <label asp-for="Gender"></label>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Species" class="form-control" />
                    <label asp-for="Species"></label>
                    <span asp-validation-for="Species" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Resources" class="form-control" />
                    <label asp-for="Resources"></label>
                    <span asp-validation-for="Resources" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <select name="RegionId" class="form-control">
                        <option value="1">Bandle-City</option>
                        <option value="2">Bilgewater</option>
                        <option value="3">Demacia</option>
                        <option value="4">Ionia</option>
                        <option value="5">Ixtal</option>
                        <option value="6">Noxus</option>
                        <option value="7">Piltover</option>
                        <option value="8">Runeterra</option>
                        <option value="9">Shadow Isles</option>
                        <option value="10">Shurima</option>
                        <option value="11">Targon</option>
                        <option value="12">Freljord</option>
                        <option value="13">Void</option>
                        <option value="14">Zaun</option>
                    </select>
                    <label asp-for="Region"></label>
                    <span asp-validation-for="RegionId" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Release" class="form-control" />
                    <label asp-for="Release">Release Date</label>
                    <span asp-validation-for="Release" class="text-danger"></span>
                </div>
                <div>
                    <input type="file" name="picturedata" class="form-control"/>
                    <label>Picture</label>
                </div>
                <div>
                    <input type="submit" value="Add New Champion" class="form-control"/>
                </div>
            </div>
        </form>
    </div>
</div>


